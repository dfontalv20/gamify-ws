{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./build",
    "paths": {
      "*": [
        "./node_modules/*"
      ]
    }
  },
  "include": [
    "src"
  ],
}